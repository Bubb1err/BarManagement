@model BarManagement.UI.Models.Schedule.GetScheduleViewModelEnvelope


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>
                Schedule
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Authentication" asp-action="AddSchedule" asp-route-barmenId="@Model.BarmenId" class="btn btn-primary btn-custom">
                Add Schedule
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Schedules)
            {
                <tr>
                    <td>
                        @obj.StartDate
                    </td>
                    <td>
                        @obj.EndDate
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}