﻿

@model IEnumerable<BarManagement.UI.Models.Authentication.WorkerViewModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>
                Workers
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Authentication" asp-action="AddWorker" class="btn btn-primary btn-custom">
                Add Worker
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Patronymic
                </th>
                <th>
                    PhoneNumber
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Surname
                    </td>
                    <td>
                        @obj.Patronymic
                    </td>
                    <td>
                        @obj.PhoneNumber
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-primary btn-custom" asp-controller="Authentication" asp-action="GetUserProfile" asp-route-userId="@obj.Id">View Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>