﻿

@model IEnumerable<BarManagement.UI.Models.Receipt.ReceiptViewModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Receipts
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Receipt" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Receipt
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Paid Time
                </th>
                <th>
                    Created At
                </th>
                <th>
                    Is Paid
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @{
                            string time = "Not Paid";

                            if (obj.PaidTime != null)
                            {
                                ((DateTime)obj.PaidTime).ToLongDateString();
                            }
                        }
                        @time
                    </td>
                    <td>
                        @obj.Created.ToLongDateString()
                    </td>
                    <td>
                        @obj.IsPaid
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Receipt" asp-action="Pay" asp-route-id="@obj.Id" class="btn btn-primary">Pay</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>