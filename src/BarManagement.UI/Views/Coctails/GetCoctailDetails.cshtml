@model BarManagement.UI.Models.Coctails.GetCoctailDetailsViewModel

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h1>@Model.Name</h1>
            @if (Model.CoctailRating > 0)
            {
                <h2>Rating: @Model.CoctailRating/@Model.TotalCoctailsCount </h2>
            }
            <p>@Model.Description</p>
        </div>
        <div class="col-6">
            <h2>Ingredients:</h2>
            <ul>
                @foreach(var ingredient in Model.Ingredients)
                {
                    <li>
                        @ingredient.Commodity.Title - @ingredient.AmountInDefaultMeasure @ingredient.Commodity.DefaultMeasure.Measure
                    </li>
                }
            </ul>
        </div>
    </div>
</div>